{
  "name": "timefly",
  "displayName": "TimeFly",
  "description": "Track your coding time and activity",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "timefly.showHeartbeats",
        "title": "TimeFly: Show Today's Heartbeats"
      },
      {
        "command": "timefly.exportHeartbeats",
        "title": "TimeFly: Export Heartbeats"
      },
      {
        "command": "timefly.showSyncInfo",
        "title": "TimeFly: Show Sync Information"
      },
      {
        "command": "timefly.toggleDebugMode",
        "title": "TimeFly: Toggle Debug Mode"
      },
      {
        "command": "timefly.clearAllData",
        "title": "TimeFly: Clear All Data"
      },
      {
        "command": "timefly.addApiKey",
        "title": "TimeFly: Add API Key"
      },
      {
        "command": "timefly.syncNow",
        "title": "TimeFly: Sync Now"
      }
    ],
    "configuration": {
      "title": "TimeFly",
      "properties": {
        "timefly.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for detailed logging"
        },
        "timefly.apiEndpoint": {
          "type": "string",
          "default": "http://localhost:3000/sync",
          "description": "API endpoint for syncing pulses"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "1.99.1",
    "@types/mocha": "10.0.10",
    "@types/node": "22.14.1",
    "@typescript-eslint/eslint-plugin": "8.29.1",
    "@typescript-eslint/parser": "8.29.1",
    "cross-env": "^7.0.3",
    "eslint": "9.24.0",
    "esbuild": "0.25.2",
    "npm-run-all": "4.1.5",
    "typescript": "5.8.3",
    "@vscode/test-cli": "0.0.10",
    "@vscode/test-electron": "2.5.2"
  }
}